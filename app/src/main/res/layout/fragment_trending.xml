<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TrendingFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <androidx.appcompat.widget.Toolbar
            android:background="#14B28B"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <ImageView
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:src="@drawable/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>


                <ImageView
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentEnd="true"
                    android:padding="8dp"
                    android:src="@drawable/more"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>



            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/trending_bg">



            <TextView
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="Trending"
                android:textSize="32sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/price"

                    android:text="Price: $56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TableLayout
                    android:layout_margin="5dp"
                    android:layout_width="1dp"
                    android:background="#000"
                    android:layout_height="match_parent"/>

                <TextView
                    android:text="Category:Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TableLayout
                    android:layout_margin="5dp"
                    android:layout_width="1dp"
                    android:background="#000"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/product"
                    android:text="Product:Gimam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_marginTop="20dp"
                android:src="@drawable/cherry"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <RelativeLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentStart="true"
                    android:src="@drawable/left"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/right"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </RelativeLayout>
            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="43dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="Explore More"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="14dp"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="72dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F6F6F6">
                <androidx.appcompat.widget.SearchView

                    app:iconifiedByDefault="false"
                    app:queryHint="Search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>